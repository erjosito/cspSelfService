@model cspWeb.Models.Subscription

@{
    ViewBag.Title = "Create Vault";
}

<h2>Create Recovery Services Vault</h2>

<h3>Are you sure you want to create a Recovery Services Vault in this subscription?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CustomerId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustomerId)
        </dd>

    </dl>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.SubscriptionId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SubscriptionId)
        </dd>

    </dl>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.SubscriptionId)
        <div class="form-actions no-color">
            <input type="submit" value="Create" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>

<div>
